{
    "family": "currency-converter-service",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::173748330247:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "currency-converter-backend",
            "image": "173748330247.dkr.ecr.eu-central-1.amazonaws.com/currency-converter-backend",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/currency-converter-service",
                    "awslogs-region": "eu-central-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}